{
  "name": "@pas7/nestjs-request-context-testkit",
  "version": "0.3.6",
  "description": "Testing utilities for NestJS request context",
  "homepage": "https://github.com/pas7-studio/nestjs-request-context/tree/main/packages/testkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/pas7-studio/nestjs-request-context.git",
    "directory": "packages/testkit"
  },
  "bugs": {
    "url": "https://github.com/pas7-studio/nestjs-request-context/issues"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config e2e/vitest.config.ts",
    "lint": "eslint ."
  },
  "dependencies": {
    "@pas7/nestjs-request-context": "workspace:*",
    "@pas7/nestjs-request-context-adapter-express": "workspace:*",
    "@pas7/nestjs-request-context-adapter-fastify": "workspace:*",
    "@pas7/request-context-core": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/platform-fastify": "^10.4.7",
    "@nestjs/testing": "^10.4.7",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.5.4",
    "vitest": "^2.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
